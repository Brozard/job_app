<h1 class="center">Log In</h1>

<p class="center" id="notice"><%= notice %></p>

<%= form_tag sessions_path do %>
  <div class="center">
    <%= label_tag :email %><br>
    <%= text_field_tag :email %>
  </div>
  <div class="center">
    <%= label_tag :password %><br>
    <%= password_field_tag :password %>
  </div>
  <div class="center">
    <%= submit_tag "Log In" %>
  </div>
<% end %>